generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model fish {
  id       BigInt    @id @default(autoincrement())
  date     DateTime  @db.Date
  female   String?
  male     String
  done     Boolean?
  doneDate DateTime? @db.Date
}

model Product {
  id             String    @id @default(uuid())
  name           String
  company        String
  description    String
  featured       Boolean
  image          String
  price          Int
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  clerkId        String
}